<%- include ('header')%>
<div class="container py-4">
    <div class="row mb-3">
      <div class="col-md-12 text-center">
        <h2 class="text-light bg-dark p-2">Admission Form</h2>
      </div>
    </div>

<form action="/form" method="post" class="">
    <div class="row mb-3">
      <div class="col-md-6">
        <label for="name" class="form-label fw-bold">Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter your name">
      </div>
      <div class="col-md-6">
        <label for="fathername" class="form-label fw-bold">Father's Name</label>
        <input type="text" class="form-control" name="fname" placeholder="Enter your father's name">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-6">
        <label for="dob" class="form-label fw-bold">Date of Birth</label>
        <input type="date" class="form-control" name="dob">
      </div>
      <div class="col-md-6">
        <label for="doa" class="form-label fw-bold">Date of Admission</label>
        <input type="date" class="form-control" name="doa">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-6">
        <label for="mobile" class="form-label fw-bold">Mobile Number</label>
        <input type="tel" class="form-control" name="mobile" placeholder="Enter your mobile number">
      </div>
      <div class="col-md-6">
        <label for="email" class="form-label fw-bold">Email address</label>
        <input type="email" class="form-control" name="email" placeholder="Enter your email address">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-6">
        <label for="address" class="form-label fw-bold">Address</label>
        <textarea class="form-control" name="address" rows="3"></textarea>
      </div>
      <div class="col-md-6">
        <label for="course" class="form-label fw-bold">Course</label>
        <select class="form-select" aria-label="Select course" name="course">
          <option selected>Select course duration</option>
          <option value="3 months">3 months</option>
          <option value="6 months">6 months</option>
          <option value="12 months">12 months</option>
        </select>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-12 d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
  </div>
  
<%- include('header') %>

<div class="container mt-5">
  <h1 class="text-center mb-5">All Users</h1>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if(users.length > 0) { %>
        <% users.forEach(user => { %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= user.name %></h5>
              <p class="card-text"><strong>Email: </strong><%= user.email %></p>
              <p class="card-text"><strong>Mobile: </strong><%= user.mobile %></p>
              <p class="card-text"><strong>Address: </strong><%= user.address %></p>
              <p class="card-text"><strong>Course: </strong><%= user.course %></p>
              <a href="/test/<%= user._id %>/delete" class="btn btn-danger btn-sm me-2">Delete</a>
              <a href="/test/<%= user._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p>No users found.</p>
      <% } %>
    </div>
  </div>
</div>

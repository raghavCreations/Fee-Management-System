<%- include('header') %>

<style>
  .top {
    background-color: #1976D2;
    color: white;
  }

  
</style>

<div class="container">
  <h1 class="text-center">Fees Data</h1>

  <% if (fees.length > 0) { %>

  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr class="top">
          <th>Student Name</th>
          <th>Mobile</th>
          <th>Amount</th>
          <th>From Date</th>
          <th>To Date</th>
        </tr>
      </thead>
      <tbody>
        <% fees.forEach(function(fee, index) { %>
        <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-gray' %>">
          <td><%= fee.username %></td>
          <td><%= fee.mobileNumber %></td>
          <td><%= fee.amount %></td>
          <td><%= new Date(fee.fromDate).toLocaleDateString() %></td>
          <td><%= new Date(fee.toDate).toLocaleDateString() %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <% } else { %>

  <p>User not found</p>

  <% } %>
</div>
